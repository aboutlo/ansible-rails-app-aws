upstream unicorn {
  server unix:/home/deploy/apps/{{app_name}}/shared/tmp/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen 80 default deferred;
  root /home/deploy/apps/{{app_name}}/public;

  try_files $uri/maintenance.html $uri/index.html $uri @unicorn;

  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn;
  }

  location ~ ^/(assets)/  {
    root /home/deploy/apps/{{app_name}}/current/public;
    gzip_static on;
    expires     max;
    add_header  Cache-Control public;
  }

  location = /favicon.ico {
    expires    max;
    add_header Cache-Control public;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}